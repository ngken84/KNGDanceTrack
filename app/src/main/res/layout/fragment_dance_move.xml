<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fdm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/fdm_move_text"
        android:layout_below="@id/fdm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"/>

    <Button
        android:id="@+id/fdm_addNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add Note"/>

    <ListView
        android:id="@+id/fdm_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fdm_move_text"
        android:layout_above="@id/fdm_addNote"></ListView>
</RelativeLayout>
